
@model List<RootObject>

@{
    ViewData["Title"] = "Home users";
}

<section class="container mt-5 pt-5 mb-5 justify-content-between">
    <h4>Api endpoint execution result <span class="badge badge-secondary"> @Model.Count() registers</span></h4>
    <br />
    <table class="table table-striped table-bordered table-hover table-sm">
        <caption>List of users</caption>
        <thead class="thead-dark">
            <tr class="text-center">
                <th scope="col">UserName</th>
                <th scope="col">Name</th>
                <th scope="col">Gender</th>
                <th scope="col">BirthDate</th>
                <th scope="col">Age</th>
                <th scope="col">Location</th>
                <th scope="col">Eldest</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr @(item.isTheEldest == true ? "class=table-success" : "")>
                <td>@item.userName</td>
                <td>@CapitalLetterHelper.FirstCharToUpper(item.name)</td>
                <td>@CapitalLetterHelper.FirstCharToUpper(@item.gender)</td>
                <td>@item.birthDate</td>
                <td>@item.age</td>
                <td>
                    @if (item.location == null)
                    {
                        <div>no data</div>
                    }
                    else
                    {
                        @item.location;
                    }
                </td>
                <td>@item.isTheEldest</td>
                <td class="text-center">
                    <div class="btn-group btn-group-sm" role="group" aria-label="First group">
                        <a href="#" class="btn btn-info">Details</a>
                        <a href="#" class="btn btn-success">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>
                </td>
            </tr>
            }

        </tbody>
    </table>
</section>